	zone "<%= @zone %>" {
		type <%= @zone_type %>;
		file "<%= @zone_file %>";
<% unless @notify_.nil? -%>
		notify <%= @notify_ ? "yes" : "no" %>;
<% end -%>
<% unless @also_notify.nil? -%>
		also-notify {
<%   @also_notify.each do |dest| -%>
			<%= dest %>;
<%   end -%>
		};
<% end -%>
<% unless @allow_transfer.nil? -%>
		allow-transfer {
<%   @allow_transfer.each do |ace| -%>
			<%= ace %>;
<%   end -%>
		};
<% end -%>
<% @content.each_line do |line| -%>
	<%= line -%>
<% end -%>
	};
